<div class="main-about section-spacing">
  <div class="page-width">
    <div class="about-hero">
      <h1 class="about-hero__title h1">{{ page.title }}</h1>
      {%- if page.content != blank -%}
        <div class="about-hero__subtitle rte">
          {{ page.content }}
        </div>
      {%- endif -%}
    </div>

    {%- if section.settings.show_story -%}
      <div class="about-story">
        <div class="about-story__grid">
          <div class="about-story__media">
            {%- if section.settings.story_image != blank -%}
              <img
                srcset="
                  {%- if section.settings.story_image.width >= 375 -%}{{ section.settings.story_image | image_url: width: 375 }} 375w,{%- endif -%}
                  {%- if section.settings.story_image.width >= 550 -%}{{ section.settings.story_image | image_url: width: 550 }} 550w,{%- endif -%}
                  {%- if section.settings.story_image.width >= 750 -%}{{ section.settings.story_image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.story_image.width >= 1100 -%}{{ section.settings.story_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                  {{ section.settings.story_image | image_url }} {{ section.settings.story_image.width }}w
                "
                sizes="(min-width: 990px) 50vw, 100vw"
                src="{{ section.settings.story_image | image_url: width: 750 }}"
                loading="lazy"
                width="{{ section.settings.story_image.width }}"
                height="{{ section.settings.story_image.height }}"
                alt="{{ section.settings.story_image.alt | escape }}"
                class="about-story__image"
              >
            {%- else -%}
              <div class="about-story__placeholder">
                {{ 'lifestyle-2' | placeholder_svg_tag }}
              </div>
            {%- endif -%}
          </div>
          <div class="about-story__content">
            <h2 class="about-story__heading h2">{{ section.settings.story_heading }}</h2>
            <div class="about-story__text rte">
              {{ section.settings.story_text }}
            </div>
          </div>
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.show_values -%}
      <div class="about-values">
        <h2 class="about-values__heading h2">{{ section.settings.values_heading }}</h2>
        <div class="about-values__grid">
          {%- for i in (1..4) -%}
            {%- assign value_title_key = 'value_' | append: i | append: '_title' -%}
            {%- assign value_text_key = 'value_' | append: i | append: '_text' -%}
            {%- assign value_icon_key = 'value_' | append: i | append: '_icon' -%}
            {%- assign value_title = section.settings[value_title_key] -%}
            {%- assign value_text = section.settings[value_text_key] -%}
            {%- assign value_icon = section.settings[value_icon_key] -%}
            
            {%- if value_title != blank -%}
              <div class="value-card">
                <div class="value-card__icon">
                  {%- if value_icon == 'heart' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                  {%- elsif value_icon == 'star' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                  {%- elsif value_icon == 'leaf' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"></path>
                      <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"></path>
                    </svg>
                  {%- elsif value_icon == 'shield' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                  {%- elsif value_icon == 'award' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="8" r="7"></circle>
                      <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                    </svg>
                  {%- else -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <path d="M12 16v-4"></path>
                      <path d="M12 8h.01"></path>
                    </svg>
                  {%- endif -%}
                </div>
                <h3 class="value-card__title">{{ value_title }}</h3>
                <p class="value-card__text">{{ value_text }}</p>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.show_mission -%}
      <div class="about-mission">
        <div class="about-mission__content">
          <h2 class="about-mission__heading h2">{{ section.settings.mission_heading }}</h2>
          <div class="about-mission__text rte">
            {{ section.settings.mission_text }}
          </div>
          {%- if section.settings.mission_button_label != blank and section.settings.mission_button_link != blank -%}
            <a href="{{ section.settings.mission_button_link }}" class="button button--primary">
              {{ section.settings.mission_button_label }}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.show_stats -%}
      <div class="about-stats">
        <div class="about-stats__grid">
          {%- for i in (1..4) -%}
            {%- assign stat_number_key = 'stat_' | append: i | append: '_number' -%}
            {%- assign stat_label_key = 'stat_' | append: i | append: '_label' -%}
            {%- assign stat_number = section.settings[stat_number_key] -%}
            {%- assign stat_label = section.settings[stat_label_key] -%}
            
            {%- if stat_number != blank -%}
              <div class="stat-card">
                <div class="stat-card__number">{{ stat_number }}</div>
                <div class="stat-card__label">{{ stat_label }}</div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .main-about {
    background: linear-gradient(to bottom, #fafafa 0%, #ffffff 100%);
  }

  .about-hero {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 80px;
  }

  .about-hero__title {
    margin-bottom: 20px;
    color: var(--color-text);
    font-size: 4.8rem;
    line-height: 1.1;
    font-weight: 700;
  }

  @media screen and (max-width: 749px) {
    .about-hero__title {
      font-size: 3.6rem;
    }

    .about-hero {
      margin-bottom: 50px;
    }
  }

  .about-hero__subtitle {
    font-size: 1.9rem;
    line-height: 1.6;
    color: #666;
  }

  .about-hero__subtitle p {
    margin-bottom: 10px;
  }

  .about-hero__subtitle p:last-child {
    margin-bottom: 0;
  }

  .about-story {
    margin-bottom: 100px;
  }

  @media screen and (max-width: 989px) {
    .about-story {
      margin-bottom: 60px;
    }
  }

  .about-story__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  @media screen and (max-width: 989px) {
    .about-story__grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  .about-story__media {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .about-story__image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.6s ease;
  }

  .about-story__media:hover .about-story__image {
    transform: scale(1.05);
  }

  .about-story__placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-story__placeholder svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .about-story__heading {
    margin-bottom: 24px;
    color: var(--color-text);
    font-size: 3.2rem;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .about-story__heading {
      font-size: 2.6rem;
    }
  }

  .about-story__text {
    font-size: 1.7rem;
    line-height: 1.8;
    color: #666;
  }

  .about-story__text p {
    margin-bottom: 16px;
  }

  .about-story__text p:last-child {
    margin-bottom: 0;
  }

  .about-values {
    margin-bottom: 100px;
  }

  @media screen and (max-width: 989px) {
    .about-values {
      margin-bottom: 60px;
    }
  }

  .about-values__heading {
    text-align: center;
    margin-bottom: 50px;
    color: var(--color-text);
    font-size: 3.6rem;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .about-values__heading {
      font-size: 2.8rem;
      margin-bottom: 35px;
    }
  }

  .about-values__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  @media screen and (max-width: 749px) {
    .about-values__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  .value-card {
    text-align: center;
    padding: 40px 30px;
    background: #ffffff;
    border-radius: 16px;
    border: 1px solid #f0f0f0;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border-color: var(--color-primary);
  }

  .value-card__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, #c9976d 100%);
    border-radius: 50%;
    color: #ffffff;
  }

  .value-card__title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 12px;
  }

  .value-card__text {
    font-size: 1.5rem;
    line-height: 1.7;
    color: #666;
    margin: 0;
  }

  .about-mission {
    margin-bottom: 100px;
    padding: 60px;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-radius: 20px;
    border: 1px solid #f0f0f0;
  }

  @media screen and (max-width: 989px) {
    .about-mission {
      margin-bottom: 60px;
      padding: 40px 30px;
    }
  }

  @media screen and (max-width: 749px) {
    .about-mission {
      padding: 30px 20px;
    }
  }

  .about-mission__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .about-mission__heading {
    margin-bottom: 24px;
    color: var(--color-text);
    font-size: 3.2rem;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .about-mission__heading {
      font-size: 2.6rem;
    }
  }

  .about-mission__text {
    font-size: 1.8rem;
    line-height: 1.8;
    color: #666;
    margin-bottom: 32px;
  }

  .about-mission__text p {
    margin-bottom: 16px;
  }

  .about-mission__text p:last-child {
    margin-bottom: 0;
  }

  .about-mission__content .button {
    padding: 16px 40px;
    font-size: 1.6rem;
    font-weight: 600;
  }

  .about-stats {
    margin-bottom: 40px;
  }

  .about-stats__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
  }

  @media screen and (max-width: 749px) {
    .about-stats__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }

  .stat-card {
    text-align: center;
    padding: 30px 20px;
    background: #ffffff;
    border-radius: 12px;
    border: 1px solid #f0f0f0;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
  }

  .stat-card__number {
    font-size: 4rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 8px;
    line-height: 1;
  }

  @media screen and (max-width: 749px) {
    .stat-card__number {
      font-size: 3.2rem;
    }
  }

  .stat-card__label {
    font-size: 1.5rem;
    color: #666;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
</style>

