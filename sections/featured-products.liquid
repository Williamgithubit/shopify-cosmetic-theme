{% liquid
  assign heading = section.settings.heading
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
%}

<div class="featured-products section-spacing">
  <div class="page-width">
    {%- if heading != blank -%}
      <h2 class="section-heading text-center">{{ heading | escape }}</h2>
    {%- endif -%}

    <div class="featured-products__grid grid grid--{{ columns_desktop }}-col grid--{{ columns_mobile }}-col-tablet-down">
      {%- if collection != blank and collection.products.size > 0 -%}
        {%- for product in collection.products limit: products_to_show -%}
          <div class="featured-products__item">
            {% render 'product-card'
              , product: product %}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..products_to_show) -%}
          <div class="featured-products__item">
            {% render 'product-card'
              , product: blank %}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

    {%- if collection != blank and section.settings.show_view_all -%}
      <div class="featured-products__view-all text-center">
        <a href="{{ collection.url }}" class="button button--secondary">
          {{ 'sections.featured_products.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Featured Products",
    "tag": "section",
    "class": "section-featured-products",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Best Sellers"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "products_to_show",
        "min": 2,
        "max": 12,
        "step": 1,
        "label": "Products to show",
        "default": 4
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "min": 2,
        "max": 5,
        "step": 1,
        "label": "Number of columns on desktop",
        "default": 4
      }, {
        "type": "select",
        "id": "columns_mobile",
        "label": "Number of columns on mobile",
        "options": [
          {
            "value": "1",
            "label": "1 column"
          }, {
            "value": "2",
            "label": "2 columns"
          }
        ],
        "default": "2"
      }, {
        "type": "checkbox",
        "id": "show_view_all",
        "label": "Show 'View all' button",
        "default": true
      }, {
        "type": "checkbox",
        "id": "enable_quick_add",
        "label": "Enable quick add to cart",
        "default": true,
        "info": "Show quick add button on product cards when hovering"
      }
    ],
    "presets": [
      {
        "name": "Featured Products"
      }
    ]
  }
{% endschema %}