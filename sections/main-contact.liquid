<div class="main-contact section-spacing">
  <div class="page-width">
    <div class="main-contact__wrapper">
      <div class="main-contact__info">
        <h1 class="main-contact__title h2">{{ page.title }}</h1>
        {%- if page.content != blank -%}
          <div class="main-contact__content rte">
            {{ page.content }}
          </div>
        {%- endif -%}
      </div>

      <div class="main-contact__form-wrapper">
        {%- form 'contact', novalidate: 'novalidate' -%}
          {%- if form.posted_successfully? -%}
            <div class="form__message form__message--success" role="status">
              <h2 class="form__message-title h3">
                {{ 'templates.contact.form.post_success' | t }}
              </h2>
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div class="form__message form__message--error" role="alert">
              <h2 class="form__message-title h3">
                {{ 'templates.contact.form.error_heading' | t }}
              </h2>
              <ul>
                {%- for field in form.errors -%}
                  <li>
                    {%- if field == 'form' -%}
                      {{ form.errors.messages[field] }}
                    {%- else -%}
                      {{ form.errors.translated_fields[field] | capitalize }} {{ form.errors.messages[field] }}
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          <div class="field">
            <label for="ContactFormName">{{ 'templates.contact.form.name' | t }}</label>
            <input
              type="text"
              name="contact[{{ 'templates.contact.form.name' | t }}]"
              id="ContactFormName"
              autocomplete="name"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              required
            >
          </div>

          <div class="field">
            <label for="ContactFormEmail">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
            <input
              type="email"
              name="contact[email]"
              id="ContactFormEmail"
              autocomplete="email"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactFormEmail-error"
              {% endif %}
              required
            >
            {%- if form.errors contains 'email' -%}
              <small id="ContactFormEmail-error" class="form__message">
                {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
              </small>
            {%- endif -%}
          </div>

          <div class="field">
            <label for="ContactFormPhone">{{ 'templates.contact.form.phone' | t }}</label>
            <input
              type="tel"
              name="contact[{{ 'templates.contact.form.phone' | t }}]"
              id="ContactFormPhone"
              autocomplete="tel"
              value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            >
          </div>

          <div class="field">
            <label for="ContactFormMessage">{{ 'templates.contact.form.comment' | t }}</label>
            <textarea
              name="contact[body]"
              id="ContactFormMessage"
              rows="6"
              required
            >{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>

          <div class="contact-form__actions">
            <button type="submit" class="button button--primary">
              {{ 'templates.contact.form.send' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

<style>
  .main-contact {
    background: linear-gradient(to bottom, #fafafa 0%, #ffffff 100%);
  }
  
  .main-contact__wrapper {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 60px;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  @media screen and (max-width: 989px) {
    .main-contact__wrapper {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
  
  .main-contact__info {
    padding: 20px 0;
  }
  
  .main-contact__title {
    margin-bottom: 20px;
    color: var(--color-text);
    font-size: 3.6rem;
    line-height: 1.2;
  }
  
  @media screen and (max-width: 749px) {
    .main-contact__title {
      font-size: 2.8rem;
    }
  }
  
  .main-contact__content {
    margin-top: 20px;
    font-size: 1.6rem;
    line-height: 1.8;
    color: #666;
  }
  
  .main-contact__content p {
    margin-bottom: 15px;
  }
  
  .main-contact__content p:last-child {
    margin-bottom: 0;
  }
  
  .main-contact__form-wrapper {
    background-color: #ffffff;
    padding: 40px;
    border-radius: 8px;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid #f0f0f0;
  }
  
  @media screen and (max-width: 749px) {
    .main-contact__form-wrapper {
      padding: 30px 20px;
    }
  }
  
  .main-contact__form-wrapper .field {
    margin-bottom: 24px;
  }
  
  .main-contact__form-wrapper .field:last-of-type {
    margin-bottom: 0;
  }
  
  .main-contact__form-wrapper label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    font-size: 1.5rem;
    color: var(--color-text);
  }
  
  .main-contact__form-wrapper label span {
    color: #d32f2f;
  }
  
  .main-contact__form-wrapper input,
  .main-contact__form-wrapper textarea {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e5e5e5;
    border-radius: 6px;
    font-size: 1.6rem;
    font-family: var(--font-body-family);
    transition: all 0.3s ease;
    background-color: #fafafa;
  }
  
  .main-contact__form-wrapper input:focus,
  .main-contact__form-wrapper textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    background-color: #ffffff;
    box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.1);
  }
  
  .main-contact__form-wrapper input:hover,
  .main-contact__form-wrapper textarea:hover {
    border-color: #d0d0d0;
  }
  
  .main-contact__form-wrapper textarea {
    resize: vertical;
    min-height: 140px;
  }
  
  .main-contact__form-wrapper input[aria-invalid="true"] {
    border-color: #d32f2f;
  }
  
  .contact-form__actions {
    margin-top: 30px;
  }
  
  .contact-form__actions .button {
    width: 100%;
    padding: 16px 32px;
    font-size: 1.6rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  @media screen and (min-width: 750px) {
    .contact-form__actions .button {
      width: auto;
      min-width: 200px;
    }
  }
  
  .contact-form__actions .button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(212, 165, 116, 0.3);
  }
  
  .form__message--success {
    padding: 20px;
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    color: #2e7d32;
    border-radius: 8px;
    margin-bottom: 25px;
    border-left: 4px solid #4caf50;
    animation: slideDown 0.4s ease;
  }
  
  .form__message--success .form__message-title {
    margin: 0;
    font-size: 1.7rem;
    font-weight: 600;
  }
  
  .form__message--error {
    padding: 20px;
    background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
    color: #d32f2f;
    border-radius: 8px;
    margin-bottom: 25px;
    border-left: 4px solid #f44336;
    animation: slideDown 0.4s ease;
  }
  
  .form__message--error .form__message-title {
    margin: 0 0 10px;
    font-size: 1.7rem;
    font-weight: 600;
  }
  
  .form__message--error ul {
    margin: 0;
    padding-left: 20px;
    font-size: 1.5rem;
  }
  
  .form__message--error li {
    margin-bottom: 5px;
  }
  
  .form__message--error li:last-child {
    margin-bottom: 0;
  }
  
  .form__message {
    display: block;
    margin-top: 8px;
    font-size: 1.4rem;
    color: #d32f2f;
    font-weight: 500;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media screen and (max-width: 749px) {
    .main-contact__form-wrapper input,
    .main-contact__form-wrapper textarea {
      font-size: 1.6rem;
      padding: 12px 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Contact Form",
  "tag": "section",
  "class": "section-contact"
}
{% endschema %}
