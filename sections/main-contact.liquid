<div class="main-contact section-spacing">
  <div class="page-width">
    <div class="main-contact__header">
      <h1 class="main-contact__title h1">{{ page.title }}</h1>
      {%- if page.content != blank -%}
        <div class="main-contact__subtitle rte">
          {{ page.content }}
        </div>
      {%- endif -%}
    </div>

    <div class="main-contact__wrapper">
      <div class="main-contact__info">
        <div class="contact-info-cards">
          {%- if section.settings.show_email -%}
            <div class="contact-card">
              <div class="contact-card__icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="contact-card__content">
                <h3 class="contact-card__title">Email Us</h3>
                <p class="contact-card__text">{{ section.settings.email }}</p>
              </div>
            </div>
          {%- endif -%}

          {%- if section.settings.show_phone -%}
            <div class="contact-card">
              <div class="contact-card__icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="contact-card__content">
                <h3 class="contact-card__title">Call Us</h3>
                <p class="contact-card__text">{{ section.settings.phone }}</p>
              </div>
            </div>
          {%- endif -%}

          {%- if section.settings.show_address -%}
            <div class="contact-card">
              <div class="contact-card__icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="contact-card__content">
                <h3 class="contact-card__title">Visit Us</h3>
                <p class="contact-card__text">{{ section.settings.address }}</p>
              </div>
            </div>
          {%- endif -%}

          {%- if section.settings.show_hours -%}
            <div class="contact-card">
              <div class="contact-card__icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
              <div class="contact-card__content">
                <h3 class="contact-card__title">Business Hours</h3>
                <p class="contact-card__text">{{ section.settings.hours }}</p>
              </div>
            </div>
          {%- endif -%}
        </div>

        {%- if section.settings.show_social -%}
          <div class="contact-social">
            <h3 class="contact-social__title">Follow Us</h3>
            <div class="contact-social__links">
              {%- if section.settings.social_facebook != blank -%}
                <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" class="contact-social__link" aria-label="Facebook">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              {%- endif -%}
              {%- if section.settings.social_instagram != blank -%}
                <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" class="contact-social__link" aria-label="Instagram">
