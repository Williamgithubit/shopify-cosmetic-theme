{% liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
%}

<div class="contact-info section-spacing">
  <div class="page-width">
    {%- if heading != blank or subheading != blank -%}
      <div class="contact-info__header text-center">
        {%- if heading != blank -%}
          <h2 class="contact-info__heading h2">{{ heading | escape }}</h2>
        {%- endif -%}
        {%- if subheading != blank -%}
          <p class="contact-info__subheading">{{ subheading | escape }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="contact-info__grid">
        {%- for block in section.blocks -%}
          <div
            class="contact-info__card"
            data-scroll-reveal
            data-scroll-reveal-delay="{{ forloop.index | times: 100 }}"
            {{ block.shopify_attributes }}>
            {%- if block.settings.icon != 'none' -%}
              <div class="contact-info__icon" aria-hidden="true">
                {%- case block.settings.icon -%}
                  {%- when 'email' -%}
                    <svg
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5">
                      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                      <polyline points="22,6 12,13 2,6" />
                    </svg>
                  {%- when 'phone' -%}
                    <svg
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                    </svg>
                  {%- when 'location' -%}
                    <svg
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                      <circle
                        cx="12"
                        cy="10"
                        r="3" />
                    </svg>
                  {%- when 'clock' -%}
                    <svg
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5">
                      <circle
                        cx="12"
                        cy="12"
                        r="10" />
                      <polyline points="12 6 12 12 16 14" />
                    </svg>
                  {%- when 'chat' -%}
                    <svg
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5">
                      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                    </svg>
                {%- endcase -%}
              </div>
            {%- endif -%}

            <div class="contact-info__content">
              {%- if block.settings.title != blank -%}
                <h3 class="contact-info__title">{{ block.settings.title | escape }}</h3>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="contact-info__text">{{ block.settings.text | escape }}</div>
              {%- endif -%}

              {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
                <a
                  href="{{ block.settings.link_url }}"
                  class="contact-info__link"
                  {% if block.settings.link_url contains 'mailto:' or block.settings.link_url contains 'tel:' %}
                  aria-label="{{ block.settings.link_text | escape }}"
                  {% endif %}>
                  {{ block.settings.link_text | escape }}
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    aria-hidden="true">
                    <line
                      x1="5"
                      y1="12"
                      x2="19"
                      y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_social -%}
      <div
        class="contact-info__social"
        data-scroll-reveal
        data-scroll-reveal-delay="400">
        <h3 class="contact-info__social-heading">Follow Us</h3>
        <div class="contact-info__social-links">
          {%- if section.settings.social_instagram != blank -%}
            <a
              href="{{ section.settings.social_instagram }}"
              class="contact-info__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on Instagram">
