      "label": "Social media heading",
      "default": "Follow Us"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "footer_menu_heading",
      "label": "Menu heading",
      "default": "Quick Links"
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Show contact information",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_heading",
      "label": "Contact heading",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Phone"
    },
    {
      "type": "textarea",
      "id": "contact_address",
      "label": "Address"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Stay Updated"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Subscribe to get special offers and beauty tips."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Newsletter input placeholder",
      "default": "Enter your email"
    }
  ]
}
{% endschema %}
