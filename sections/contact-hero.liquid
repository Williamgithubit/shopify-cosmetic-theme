{% liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign background_image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity
  assign text_alignment = section.settings.text_alignment
%}

<div class="contact-hero" data-scroll-reveal>
  {%- if background_image != blank -%}
    <div class="contact-hero__background">
      <img
        srcset="
          {%- if background_image.width >= 750 -%}{{ background_image | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if background_image.width >= 1100 -%}{{ background_image | image_url: width: 1100 }} 1100w,{%- endif -%}
          {%- if background_image.width >= 1500 -%}{{ background_image | image_url: width: 1500 }} 1500w,{%- endif -%}
          {%- if background_image.width >= 2000 -%}{{ background_image | image_url: width: 2000 }} 2000w,{%- endif -%}
          {{ background_image | image_url }} {{ background_image.width }}w
        "
        sizes="100vw"
        src="{{ background_image | image_url: width: 1500 }}"
        alt="{{ background_image.alt | default: heading | escape }}"
        loading="eager"
        width="{{ background_image.width }}"
        height="{{ background_image.height }}">
      <div class="contact-hero__overlay" style="opacity: {{ overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- endif -%}

  <div class="page-width">
    <div class="contact-hero__content contact-hero__content--{{ text_alignment }}">
      {%- if heading != blank -%}
        <h1 class="contact-hero__heading">{{ heading | escape }}</h1>
      {%- endif -%}

      {%- if subheading != blank -%}
        <p class="contact-hero__subheading">{{ subheading | escape }}</p>
      {%- endif -%}

      {%- if section.settings.show_breadcrumbs -%}
        <nav class="contact-hero__breadcrumbs" aria-label="Breadcrumb">
          <ol class="breadcrumbs-list">
            <li>
              <a href="/" class="breadcrumbs-link">Home</a>
            </li>
            <li>
              <svg
                width="12"
                height="12"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                aria-hidden="true">
                <polyline points="9 18 15 12 9 6" />
              </svg>
            </li>
            <li>
              <span class="breadcrumbs-current" aria-current="page">Contact</span>
            </li>
          </ol>
        </nav>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .contact-hero {
    position: relative;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #f5ede6 0%, #faf7f4 100%);
  }

  .contact-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .contact-hero__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .contact-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(212, 165, 116, 0.85) 0%, rgba(200, 149, 99, 0.85) 100%);
  }

  .contact-hero__content {
    position: relative;
    z-index: 1;
    padding: var(--spacing-4xl, 96px) 0;
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-hero__content--left {
    text-align: left;
    margin-left: 0;
  }

  .contact-hero__content--center {
    text-align: center;
  }

  .contact-hero__content--right {
    text-align: right;
    margin-right: 0;
  }

  .contact-hero__heading {
    font-family: var(--font-heading-family, 'Playfair Display', serif);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: white;
    margin-bottom: var(--spacing-md, 16px);
    line-height: 1.15;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
    animation: fadeInUp 0.8s ease backwards;
  }

  .contact-hero__subheading {
    font-size: clamp(0.75rem, 1.2vw, 0.875rem);
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.5;
    margin-bottom: var(--spacing-lg, 24px);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.15);
    animation: fadeInUp 0.8s ease 0.2s backwards;
  }

  .contact-hero__breadcrumbs {
    animation: fadeInUp 0.8s ease 0.4s backwards;
  }

  .breadcrumbs-list {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm, 8px);
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
  }

  .contact-hero__content--center .breadcrumbs-list {
    justify-content: center;
  }

  .contact-hero__content--right .breadcrumbs-list {
    justify-content: flex-end;
  }

  .breadcrumbs-link {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-size: 0.6875rem;
    transition: color var(--transition-fast, 0.15s);
  }

  .breadcrumbs-link:hover,
  .breadcrumbs-link:focus {
    color: white;
    text-decoration: underline;
  }

  .breadcrumbs-current {
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 749px) {
    .contact-hero {
      min-height: 300px;
    }

    .contact-hero__content {
      padding: var(--spacing-3xl, 64px) 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-hero__heading,
    .contact-hero__subheading,
    .contact-hero__breadcrumbs {
      animation: none;
    }
  }
</style>

{% schema %}
  {
    "name": "Contact Hero",
    "tag": "section",
    "class": "section-contact-hero",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Get in Touch"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Questions about shades, routines, or orders? We're here to help you glow."
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image",
        "info": "Recommended: 2000 x 800px. Use soft beauty imagery."
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Overlay opacity",
        "default": 80,
        "info": "Darkens background for text readability"
      }, {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }, {
        "type": "checkbox",
        "id": "show_breadcrumbs",
        "label": "Show breadcrumbs",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Contact Hero"
      }
    ]
  }
{% endschema %}