<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_primary }}">

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ shop.name }} - {{ 'gift_cards.issued.title' | t }}</title>
    <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">

    {{ content_for_header }}

    {% style %}
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ settings.type_header_font | font_face: font_display: 'swap' }}:root
      {
        --font-body-family: {{ settings.type_body_font.family }}, 
        {{ settings.type_body_font.fallback_families }};
        --font-heading-family: {{ settings.type_header_font.family }}, 
        {{ settings.type_header_font.fallback_families }};
        --color-primary: {{ settings.color_primary }};
        --color-background: {{ settings.color_background }};
        --color-text: {{ settings.color_text }};
      }

      body {
        font-family: var(--font-body-family);
        color: var(--color-text);
        background-color: var(--color-background);
        margin: 0;
        padding: 20px;
      }

      .gift-card-wrapper {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        padding: 40px 20px;
      }

      .gift-card-header {
        margin-bottom: 30px;
      }

      .gift-card-header h1 {
        font-family: var(--font-heading-family);
        font-size: 2.4rem;
        margin: 0 0 10px;
      }

      .gift-card-amount {
        font-size: 3rem;
        font-weight: bold;
        color: var(--color-primary);
        margin: 20px 0;
      }

      .gift-card-code {
        background: #f5f5f5;
        padding: 20px;
        border-radius: 8px;
        margin: 20px 0;
        font-size: 1.8rem;
        font-weight: bold;
        letter-spacing: 0.1em;
      }

      .gift-card-qr {
        margin: 30px 0;
      }

      .gift-card-qr img {
        max-width: 200px;
        height: auto;
      }

      .gift-card-actions {
        margin-top: 30px;
      }

      .button {
        display: inline-block;
        padding: 12px 24px;
        background: var(--color-primary);
        color: white;
        text-decoration: none;
        border-radius: 4px;
        margin: 5px;
        font-weight: 500;
      }

      .button:hover {
        opacity: 0.9;
      }

      @media print {
        .gift-card-actions {
          display: none;
        }
      }
    {% endstyle %}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
  </head>

  <body class="template-gift-card">
    <div class="gift-card-wrapper">
      <header class="gift-card-header">
        {%- if shop.logo -%}
          <img
            src="{{ shop.logo | image_url: width: 200 }}"
            alt="{{ shop.name }}"
            width="200"
            height="auto">
        {%- else -%}
          <h2>{{ shop.name }}</h2>
        {%- endif -%}
        <h1>{{ 'gift_cards.issued.title_html' | t: value: gift_card.initial_value | money_without_trailing_zeros }}</h1>
        <p>{{ 'gift_cards.issued.subtext' | t }}</p>
      </header>

      <div class="gift-card-amount">
        {%- if gift_card.enabled == false or gift_card.expired -%}
          <p>{{ 'gift_cards.issued.expired' | t }}</p>
        {%- endif -%}
        {%- if gift_card.balance != gift_card.initial_value -%}
          <p>{{ 'gift_cards.issued.remaining_html' | t: balance: gift_card.balance | money }}</p>
        {%- endif -%}
        {{ gift_card.balance | money }}
      </div>

      <div class="gift-card-code">
        <div id="gift-card-code-text">{{ gift_card.code | format_code }}</div>
      </div>

      {%- if gift_card.pass_url -%}
        <div class="gift-card-qr">
          <img
            src="{{ gift_card.qr_identifier | qr_code_url }}"
            alt="{{ 'gift_cards.issued.qr_code_text' | t }}"
            width="200"
            height="200">
        </div>
      {%- endif -%}

      <div class="gift-card-actions">
        <a
          href="{{ shop.url }}"
          class="button"
          target="_blank">{{ 'gift_cards.issued.shop_link' | t }}</a>
        <button class="button" onclick="window.print();">{{ 'gift_cards.issued.print_gift_card' | t }}</button>
      </div>

      <p style="margin-top: 40px; font-size: 0.9em; color: #666;">
        {{ 'gift_cards.issued.expiration_date' | t: expiry: gift_card.expires_on | date: '%B %e, %Y' }}
      </p>
    </div>

    <script>
      document.getElementById('gift-card-code-text').addEventListener('click', function() {
        var code = this.textContent;
        if (navigator.clipboard) {
          navigator.clipboard.writeText(code).then(function() {
            alert('Gift card code copied!');
          });
        }
      });
    </script>
  </body>
</html>