<div class="customer-reset-password section-spacing">
  <div class="page-width">
    <div class="customer-reset-password__wrapper" style="max-width: 500px; margin: 0 auto;">
      <h1 class="customer-reset-password__title h2">{{ 'customer.reset_password.title' | t }}</h1>
      <p class="customer-reset-password__subtext">{{ 'customer.reset_password.subtext' | t }}</p>

      {%- form 'reset_customer_password', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <div class="form__message form__message--error" role="alert">
            <h2 class="form__message-title h3">
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    {{ form.errors.translated_fields[field] | capitalize }} {{ form.errors.messages[field] }}
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="field">
          <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
          <input
            type="password"
            name="customer[password]"
            id="ResetPassword"
            autocomplete="new-password"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="ResetPassword-error"
            {% endif %}
            required
          >
          {%- if form.errors contains 'password' -%}
            <small id="ResetPassword-error" class="form__message">
              {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}
            </small>
          {%- endif -%}
        </div>

        <div class="field">
          <label for="ResetPasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="ResetPasswordConfirmation"
            autocomplete="new-password"
            {% if form.errors contains 'password_confirmation' %}
              aria-invalid="true"
              aria-describedby="ResetPasswordConfirmation-error"
            {% endif %}
            required
          >
          {%- if form.errors contains 'password_confirmation' -%}
            <small id="ResetPasswordConfirmation-error" class="form__message">
              {{ form.errors.translated_fields['password_confirmation'] | capitalize }} {{ form.errors.messages['password_confirmation'] }}
            </small>
          {%- endif -%}
        </div>

        <div class="customer-reset-password__actions">
          <button type="submit" class="button button--primary button--full-width">
            {{ 'customer.reset_password.submit' | t }}
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

<style>
  .customer-reset-password__subtext {
    margin-bottom: 30px;
    color: #666;
  }
  
  .customer-reset-password__actions {
    margin: 30px 0;
  }
</style>
